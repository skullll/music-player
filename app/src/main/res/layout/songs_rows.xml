<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="5dp"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/plw"
        android:id="@+id/iv_artwork"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_titleol"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingRight="50dp"
        android:textColor="@color/white"
        android:paddingEnd="50dp"
        android:layout_toRightOf="@id/iv_artwork"
        android:layout_toEndOf="@id/iv_artwork"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_artwork"
        android:layout_toEndOf="@id/iv_artwork"
        android:id="@+id/artistol"
        android:text="artist"
        android:textColor="@color/white"
        android:layout_below="@id/tv_titleol"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/duration"
        android:text="00:00"
        android:textColor="@color/white"
        ></TextView>

    <ImageView
        android:id="@+id/playctivity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/duration"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/pew"
        android:visibility="invisible"></ImageView>

</RelativeLayout>