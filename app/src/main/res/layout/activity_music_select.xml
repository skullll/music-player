<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Music_select">

    <Button
        android:id="@+id/offlinemusic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="offline Music"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/onlinemusic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="online Music"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_below="@id/offlinemusic"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/uploadmusic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="upload Music"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:layout_below="@id/onlinemusic"
        android:layout_marginTop="20dp"/>

</RelativeLayout>